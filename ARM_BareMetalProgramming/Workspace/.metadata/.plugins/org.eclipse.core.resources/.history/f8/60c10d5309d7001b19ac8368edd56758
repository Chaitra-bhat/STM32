#include <stdint.h>
#include <stm32f407xx.h>


void uart1_TX_init();
static uint16_t compute_uart_bd(uint32_t PeriphClk, uint32_t baudrate);
static void uart_set_baudrate(USART_TypeDef *USARTx, uint32_t PeriphClk, uint32_t baudrate);
void uart1_write(char ch);

#define GPIOA_ENABLE	(1U<<0)
#define UART1_EN		(1<<19)

#define SYSFREQ			16000000
#define APB1_CLK		SYSFREQ

#define UART_BAUDRATE	115200

#define CR1_TE			(1U<<3)
#define CR1_UE			(1U<<13)
#define SR_TXE			(1U<<7)

int main()
{

	uart1_TX_init();

	while(1)
	{
		uart1_write('Y');
	}
	return 0;
}

void uart1_TX_init()
{
	//Enable clock for gpioa
	RCC->AHB1ENR |= GPIOA_ENABLE;

	//Enable the alternate functionality for Tx
	GPIOA->MODER &= ~(1U<<0);
	GPIOA->MODER |= (1U<<1);

	//set alternate function type to Tx
	GPIOA->AFR[1] &= ~(1U<<0);
	GPIOA->AFR[1] &= ~(1U<<1);
	GPIOA->AFR[1] &= ~(1U<<2);
	GPIOA->AFR[1] |= (1U<<3);

	//enable usart2 clock
	RCC->APB1ENR |= UART1_EN;

	//baudrate
	uart_set_baudrate(UART4, APB1_CLK, UART_BAUDRATE);

	//transfer direction
	UART4->CR1 = CR1_TE;

	//enable usart2 module
	UART4->CR1 |= CR1_UE;
}

static void uart_set_baudrate(USART_TypeDef *USARTx, uint32_t PeriphClk, uint32_t baudrate)
{
	USARTx->BRR = compute_uart_bd(PeriphClk, baudrate);
}

static uint16_t compute_uart_bd(uint32_t PeriphClk, uint32_t baudrate)
{

	return ((PeriphClk + (baudrate/2U))/baudrate);
}

void uart1_write(char ch)
{
	while(!(UART4->SR & SR_TXE)){}
	//Initially transmit data register should be empty
	UART4->DR = (ch & 0xFF);
	//write to transmit data register
}
