#include<stm32f407xx.h>
#include<uart.h>

#define SYSTICK_LOADVAL	16000U
#define SYSTICK_ENABLE	(1U<<0)
#define SYSTICK_CLCKSRC	(1U<<2)
#define SYSTICK_CNTRFLG	(1U<<16)



void systickDelayMs(int n)
{
	//Configure systick
	SysTick->LOAD = SYSTICK_LOADVAL;

}


